@model ExpenseEntity

@{
	ViewData["Title"] = "View Expense Details For Delete";

}
<form method="post" asp-action="Delete">
	<input asp-for="ExpenseId" hidden />

	<div class="border p-1">

		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group row">
			<h2 class="text-black-50 pe-lg-3">Delete Your Expense</h2>
		</div>
		<br />

		<div class=row>
			<div class="col-4">
				<label asp-for="ExpenseDate"></label>
				<input asp-for="ExpenseDate" class="form-control datatimepicker" disabled />
				@*<span asp-validation-for="ExpenseDate" class="text-danger"></span>*@
			</div>
		</div>
		<br />


		<div class="row">
			<div class="=col-4">
				<label asp-for="ExpenseCategoryId"></label>
				<select asp-for="ExpenseCategoryId" asp-items="@ViewBag.PopulateExpCategory" class=" ="form-control"/disabled>
					<option selected> -- Select Expense Catgory</option>
				</select>
				<span asp-validation-for="ExpenseCategoryId" class="text-danger"></span>
			</div>
		</div>
		<br />

		<div class="row">
			<div class="=col-4">
				<label asp-for="ExpenseGivenTo"></label>
				<input asp-for="ExpenseGivenTo" class=" ="form-control" disabled/>
				@*<span asp-validation-for="ExpenseGivenTo" class="text-danger"></span>*@
			</div>
		</div>
		<br />

		<div class="row">
			<div class="=col-4">
				<label asp-for="ExpenseAmount"></label>
				<input asp-for="ExpenseAmount" class=" ="form-control" disabled/>
				@*<span asp-validation-for="ExpenseAmount" class="text-danger"></span>*@
			</div>
		</div>
		<br />

		<div class="w-12 btn-group" role="group">
			<input type="submit" class="btn btn-primary mx-1" value="Delete" />
			<a asp-action="Index" class="btn btn-danger mx-1">Back</a>
		</div>


	</div>
</form>